{
  "version": "1.0.0",
  "lastUpdated": "2023-11-20",
  "debateFramework": {
    "structure": {
      "format": {
        "openingStatements": {
          "description": "Initial presentation of positions",
          "timeAllocation": "5-10 minutes per participant",
          "components": [
            "Current design approach and rationale (COSMOS)",
            "Critique and alternative proposal (ATLAS)"
          ]
        },
        "structuredDiscussion": {
          "description": "Point-counterpoint exchange of arguments",
          "timeAllocation": "20-30 minutes",
          "components": [
            "Timed responses to specific points",
            "Evidence-based reasoning requirements",
            "Steelmanning of opposing positions"
          ]
        },
        "synthesisPhase": {
          "description": "Identification of agreements and remaining differences",
          "timeAllocation": "10-15 minutes",
          "components": [
            "Documentation of areas of agreement",
            "Clarification of remaining disagreements",
            "Development of potential compromise positions"
          ]
        },
        "actionItems": {
          "description": "Concrete next steps and assignments",
          "timeAllocation": "5 minutes",
          "components": [
            "Specific follow-up tasks",
            "Assignment of responsibilities",
            "Timeline for implementation or next discussion"
          ]
        }
      },
      "documentation": {
        "required": [
          "Key positions from both sides",
          "Main arguments and counterarguments presented",
          "Areas of agreement and resolution",
          "Open questions requiring further research",
          "Action items with assignees and status"
        ],
        "format": "Structured JSON following the pattern in memory/debates/token_stability.json",
        "responsibility": "Assigned documentarian with review by both ATLAS and COSMOS representatives"
      },
      "moderation": {
        "role": "Neutral third party to ensure productive debate",
        "responsibilities": [
          "Ensure balanced speaking time",
          "Keep discussions focused on the topic",
          "Enforce the principle of steelmanning",
          "Intervene if discussion becomes unproductive",
          "Summarize key points at transition between phases"
        ]
      }
    },
