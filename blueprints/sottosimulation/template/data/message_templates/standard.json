{
  "server_messages": {
    "order": {
      "template": "[Serveur {server_id}] Table {table}, nouvelle commande : {order_details}",
      "variations": [
        "[Serveur {server_id}] Commande pour la {table} : {order_details}",
        "[Serveur {server_id}] Nouvelle commande, table {table} : {order_details}"
      ]
    },
    "ready": {
      "template": "[Serveur {server_id}] Plat prêt pour la table {table}",
      "variations": [
        "[Serveur {server_id}] Table {table}, plat à servir",
        "[Serveur {server_id}] Service table {table}"
      ]
    },
    "bill": {
      "template": "[Serveur {server_id}] Addition demandée table {table}",
      "variations": [
